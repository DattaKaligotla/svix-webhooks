{
    "name": "svix/svix",
    "type": "library",
    "description": "Svix PHP Library",
    "keywords": ["webhooks","api"],
    "homepage": "https://www.svix.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Svix",
            "email": "support@svix.com",
            "homepage": "http://www.svix.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"

    },
    "require-dev": {
        "phpunit/phpunit": ">=10.0 <=12.9",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Svix\\": "php/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Svix\\Tests\\": [
                "php/tests/"
            ]
        }
    }
}
