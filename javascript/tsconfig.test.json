{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./test_build",
        "rootDir": "./",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "**/*.test.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
