{
  "name": "svix",
  "version": "1.76.1",
  "description": "Svix webhooks API client and webhook verification library",
  "author": "svix",
  "repository": "https://github.com/svix/svix-libs",
  "type": "commonjs",
  "keywords": [
    "svix",
    "diahook",
    "webhooks",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "yarn run build",
    "test": "tsc -p tsconfig.test.json && node --enable-source-maps test_build/src/index.test.js",
    "prepublishOnly": "yarn lint",
    "lint:eslint": "eslint src",
    "fmt": "biome format --write",
    "lint": "biome format && yarn run lint:eslint --max-warnings=0",
    "lint:fix": "yarn run lint:eslint --fix && yarn run fmt"
  },
  "dependencies": {
    "@stablelib/base64": "^1.0.0",
    "@types/node": "^22.7.5",
    "es6-promise": "^4.2.8",
    "fast-sha256": "^1.3.0",
    "url-parse": "^1.5.10",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@eslint/js": "^9.20.0",
    "@stablelib/utf8": "^2.0.0",
    "@types/url-parse": "1.4.11",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "mockttp": "^3.15.5",
    "typescript": "^4.0",
    "typescript-eslint": "^8.24.0"
  }
}
